<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SectionAuth.SectionDetails.ProviderCategoryScreen">


    <RelativeLayout
        android:id="@+id/TopSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/montserrat_arabic"
            android:text="اختر نوع الخدمة"
            android:textColor="@color/ft_black"
            android:textSize="@dimen/_12ssp" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ft_android_back_arrow"
            app:tint="@color/ft_black" />

    </RelativeLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_properties"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_15sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أماكن ترفيهية"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_clinics"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_15sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العيادات"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_food"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_15sdp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الوجبات"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_shopping"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_15sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التسوق"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>