<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:gravity="center_vertical"
    >
    <CheckBox
        android:id="@+id/AttributeSelected"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:buttonTint="@color/ft_dark_blue"
        android:text="@null"
        />

    <TextView
        android:id="@+id/AttributeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="غرف نوم"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:textColor="@color/ft_grey_1"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/montserrat_arabic"
        />

    <EditText
        android:id="@+id/AttributeValue"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/ft_radius_stroke"
        android:fontFamily="@font/montserrat_arabic"
        android:hint="القيمة"
        android:inputType="number"
        android:gravity="center"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:textColorHint="@color/ft_grey_2"
        android:textColor="@color/ft_black"
        android:textSize="@dimen/_9ssp" />


</LinearLayout>