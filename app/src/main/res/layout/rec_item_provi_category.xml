<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/WholeCategory"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ft_radius_stroke"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/CategoryImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ft_cat_big_icon_properties"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_15sdp"
            />

        <TextView
            android:id="@+id/CategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أماكن ترفيهية"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/montserrat_arabic"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/ft_black"


            />

    </LinearLayout>

</LinearLayout>