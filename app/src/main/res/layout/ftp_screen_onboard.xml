<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SectionOnBoard.OnBoardScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:src="@drawable/ft_onboard_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="هذا النص هو مثال"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/montserrat_arabic"
        android:textColor="@color/ft_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="سفن يف لدبتسي نأ نكمي صنل لاثم وه صنلا اذه صنلا دلوم نم صنلا اذه ديلوت مت دقل ،ةحاسملا كنكمي ثيح ،ىبرعلا"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:textColor="@color/ft_grey_1"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:textSize="@dimen/_11ssp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/montserrat_arabic"
        app:layout_constraintBottom_toTopOf="@+id/StartNow"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <TextView
        android:id="@+id/StartNow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/ft_radius_fill_light"
        android:backgroundTint="@color/ft_dark_blue"
        android:fontFamily="@font/montserrat_arabic"
        android:gravity="center"
        android:paddingVertical="@dimen/_9sdp"
        android:text="إبدأ الآن"
        android:textColor="@color/ft_white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>