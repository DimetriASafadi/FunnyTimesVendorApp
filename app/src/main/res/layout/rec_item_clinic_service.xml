<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    >
    <LinearLayout
        android:id="@+id/WholeService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/ServiceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_arabic"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/ft_grey_2"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"
            android:text="طب أسنان" />

        <TextView
            android:id="@+id/ServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_arabic"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/ft_grey_2"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:textSize="@dimen/_12ssp"
            android:text="طب أسنان" />

        <ImageView
            android:id="@+id/IsSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ft_check_circle_icon"
            android:layout_gravity="center_vertical"
            app:tint="@color/ft_grey_3" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ft_black"
        android:alpha="0.1"
        />




</LinearLayout>